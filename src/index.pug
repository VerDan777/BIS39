doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='initial-scale=1.0, user-scalable=no')
    link(rel='stylesheet', href='styles.css')
    title БИС Эвакуатор
  body
    header.main-header
      .container
        img.logo(src='img/logo.png', alt='logo')
        .header-text
          h1.company-name БИС Эвакуатор
          .phone-number +7(911) 455-47-96
    .navigation
      .container
        form.nav-form(action='')
          .nav-item
          //-   .nav-icon.nav-icon--car
          //-   input#evac-from-input.nav-form__input(type='text', placeholder='Откуда эвакуировать')
          //- .nav-item
            .nav-icon.nav-icon--evac
            input#evac-to-input.nav-form__input(type='text', placeholder='Куда эвакуировать')
        .stats
        select#start
          option(value="chicago,il") Chicago
          option(value="st louis, mo") St Louis
        select#end
          option(value="joplin, mo") Joplin
          option(value="amarillo,tx") Amarillo
          .stats__distance Расстояние: 43км
          .stats__value Стоимость: 1200 руб.
          input(type="button" id="button" onclick="initMap()" value="Get Route")
    #dvDistance
    .map
    #dvPanel
    footer.main-footer
      .container
        .copyrights © БИС Эвакуатор 2016
 

    script(src='script.js')
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCctzeYyaKtLr-MfxITYRgiFfBPMvNE4Sw&callback=initMap")

